<Window x:Class="FUMiniHotelSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FU Mini Hotel System - Login"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="404*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667EEA" Offset="0"/>
                <GradientStop Color="#764BA2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="20" Margin="30,30,30,30" BorderBrush="#D3D3D3" BorderThickness="1" Opacity="0.96" Grid.ColumnSpan="2">
            <StackPanel Margin="40" VerticalAlignment="Center">
                <!-- Header -->
                <TextBlock Text="FU Mini Hotel System" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="#4A4A4A" 
                           HorizontalAlignment="Center" 
                           Margin="0,10"/>

                <Border Background="#F3F6FD" CornerRadius="40" Width="90" Height="90" Margin="0,20,0,30"
                        HorizontalAlignment="Center" >
                    <TextBlock Text="🏨" FontSize="40" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox x:Name="txtUser"
                         Height="45" FontSize="16"
                         Padding="12,10"
                         Margin="0,0,0,20"
                         Background="#F9FAFC"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Foreground="#333"
                         />

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,5" Foreground="#555"/>
                <PasswordBox x:Name="txtPass"
                             Height="45" FontSize="16"
                             Padding="12,10"
                             Margin="0,0,0,30"
                             Background="#F9FAFC"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Foreground="#333"
                             />

                <!-- Login Button -->
                <Button Content="Login"
                        Height="50" FontSize="18" FontWeight="SemiBold"
                        Background="#6B73FF"
                        Foreground="White"
                        BorderThickness="0"
                        Click="btnLogin_Click"
                        Cursor="Hand"
                        Margin="0,0,0,15">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10" 
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5A64E6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Cancel Button -->
                <Button Content="Cancel"
                        Height="45" FontSize="16"
                        Background="#E0E0E0"
                        Foreground="Black"
                        BorderThickness="0"
                        Click="btnCancel_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
