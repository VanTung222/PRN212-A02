<Window
    x:Class="FUMiniHotelManagement.AdminView.AddUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add User"
    Width="460"
    Height="440"
    WindowStartupLocation="CenterScreen"
    Background="#f4f6fb">

    <Border
        Padding="24"
        Background="White"
        CornerRadius="16"
        BorderBrush="#dbe2ef"
        BorderThickness="1">

        <StackPanel>
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#4f8cff"
                Text="Add New User" />

            <!-- Full Name -->
            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                <TextBlock
                    Width="110"
                    VerticalAlignment="Center"
                    Foreground="#333"
                    Text="Full Name:" />
                <TextBox
                    Width="240"
                    Height="32"
                    Padding="6,0"
                    Background="#f0f4ff"
                    BorderBrush="#4f8cff"
                    BorderThickness="1"
                    Text="{Binding CustomerFullName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Phone -->
            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                <TextBlock
                    Width="110"
                    VerticalAlignment="Center"
                    Foreground="#333"
                    Text="Phone:" />
                <TextBox
                    Width="240"
                    Height="32"
                    Padding="6,0"
                    Background="#f0f4ff"
                    BorderBrush="#4f8cff"
                    BorderThickness="1"
                    Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Email -->
            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                <TextBlock
                    Width="110"
                    VerticalAlignment="Center"
                    Foreground="#333"
                    Text="Email:" />
                <TextBox
                    Width="240"
                    Height="32"
                    Padding="6,0"
                    Background="#f0f4ff"
                    BorderBrush="#4f8cff"
                    BorderThickness="1"
                    Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Birthday -->
            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                <TextBlock
                    Width="110"
                    VerticalAlignment="Center"
                    Foreground="#333"
                    Text="Birthday:" />
                <DatePicker
                    Width="240"
                    Height="32"
                    Background="#f0f4ff"
                    BorderBrush="#4f8cff"
                    BorderThickness="1"
                    SelectedDate="{Binding CustomerBirthday, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Status -->
            <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                <TextBlock
                    Width="110"
                    VerticalAlignment="Center"
                    Foreground="#333"
                    Text="Status:" />
                <ComboBox
                    Width="240"
                    Height="32"
                    Background="#f0f4ff"
                    BorderBrush="#4f8cff"
                    BorderThickness="1"
                    SelectedValue="{Binding CustomerStatus, Mode=TwoWay}"
                    SelectedValuePath="Tag">
                    <ComboBoxItem Content="Active" Tag="1" />
                    <ComboBoxItem Content="Inactive" Tag="0" />
                </ComboBox>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="36"
                    Margin="0,0,12,0"
                    Background="#4f8cff"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#4f8cff"
                    Click="Save_Click"
                    Content="Save" />
                <Button
                    Width="100"
                    Height="36"
                    Background="#ff6b6b"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#ff6b6b"
                    Click="Cancel_Click"
                    Content="Cancel" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
