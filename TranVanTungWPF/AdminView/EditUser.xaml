<Window
    x:Class="FUMiniHotelManagement.AdminView.EditUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit User"
    Width="480"
    Height="529"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Background="#f4f6fb"
    WindowStyle="SingleBorderWindow">

    <Border
        Margin="20"
        Padding="24"
        Background="White"
        CornerRadius="16"
        BorderBrush="#4f8cff"
        BorderThickness="1"
        SnapsToDevicePixels="True">
        <StackPanel>

            <!-- Title -->
            <TextBlock
                Text="Edit User"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#4f8cff"
                HorizontalAlignment="Center"
                Margin="0,0,0,20" />

            <!-- Full Name -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Full Name:" FontWeight="SemiBold" Foreground="#333" />
                <TextBox
                    Height="34"
                    FontSize="14"
                    Padding="6"
                    Text="{Binding CustomerFullName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Phone -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Phone:" FontWeight="SemiBold" Foreground="#333" />
                <TextBox
                    Height="34"
                    FontSize="14"
                    Padding="6"
                    Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Email -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Email:" FontWeight="SemiBold" Foreground="#333" />
                <TextBox
                    Height="34"
                    FontSize="14"
                    Padding="6"
                    Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Birthday -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Birthday:" FontWeight="SemiBold" Foreground="#333" />
                <DatePicker
                    Height="34"
                    FontSize="14"
                    SelectedDate="{Binding CustomerBirthday, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Status -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Status:" FontWeight="SemiBold" Foreground="#333" />
                <ComboBox
                    Height="34"
                    FontSize="14"
                    SelectedValue="{Binding CustomerStatus, Mode=TwoWay}"
                    SelectedValuePath="Tag">
                    <ComboBoxItem Content="Active" Tag="1" />
                    <ComboBoxItem Content="Inactive" Tag="0" />
                </ComboBox>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Width="100"
                    Height="36"
                    Margin="0,0,10,0"
                    Content="Save"
                    Click="Save_Click"
                    Background="#4f8cff"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand" />
                <Button
                    Width="100"
                    Height="36"
                    Content="Cancel"
                    Click="Cancel_Click"
                    Background="#ccc"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand" />
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
